<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox fx:id="vboxRegistrazione" alignment="CENTER" onMouseReleased="#removeTemporary" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.applicazioneprogetto.RegistrazioneController">
    <children>
      <AnchorPane prefHeight="55.0" prefWidth="741.0">
         <children>
            <Text fx:id="textLingua" layoutX="523.0" layoutY="18.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Lingua">
               <font>
                  <Font size="12.0" />
               </font>
            </Text>
            <ChoiceBox fx:id="choiceboxLingua" layoutX="466.0" layoutY="23.0" prefWidth="150.0" />
         </children>
      </AnchorPane>
      <Text fx:id="textRegistrati" strokeType="OUTSIDE" strokeWidth="0.0" text="Registrati">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Text>
      <Label fx:id="labelUserReg" text="Username" />
      <TextField fx:id="fieldUserReg" />
      <Label fx:id="labelPwdReg" text="Password" />
      <PasswordField fx:id="fieldPwdReg" />
        <Button fx:id="buttonRegistrazione" onAction="#registraUtente" text="Crea il tuo account" />
      <Button fx:id="buttonGoToLogin" mnemonicParsing="false" onAction="#goToLogin" text="vai al login" />
      <Text fx:id="textMessage" strokeType="OUTSIDE" strokeWidth="0.0" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
